include index

    #banner.page-header
        .row
            .col-lg-5
                .page-header
                    h1 Create New Task
        .row
            .col-lg-10
                form.form-horizontal(method="post")
                    fieldset
                        legend Task Form
                        |     
                        .form-group
                            label.col-lg-2.control-label(for='title') Title
                            |       
                            .col-lg-10
                                input#inputTaskTitle.form-control(placeholder='Title', type='text', name="title")
                            |     
                        .form-group
                            label.col-lg-2.control-label(for='description') Description
                            |       
                            .col-lg-10
                                textarea#textArea.form-control(rows='3', name="description")
                                |         
                                span.help-block If it's a bug, you can add steps to reproduce here.
                            |     
                        .form-group
                            label.col-lg-2.control-label(for='select') Select priority
                            |       
                            .col-lg-10
                                select#select.form-control(name="priority")
                                    option 1
                                    |           
                                    option 2
                                    |           
                                    option 3
                                    |           
                                    option 4
                                    |           
                                    option 5
                                    |           
                                    option 6
                                    |           
                                    option 7
                                    |           
                                    option 8
                                    |
                                    option 9
                                    |
                                    option 10
                                    |
                                    br
                            |     
                        .form-group
                            label.col-lg-2.control-label(for='dueDate') Due Date
                            |       
                            .col-lg-10
                                input#inputDueDate.form-control(placeholder='Please fix this to be a date selector', type='text', name="date")
                            |     
                        .form-group
                            label.col-lg-2.control-label(for='assignee') Assignee
                            |       
                            .col-lg-10
                                input#inputAssignee.form-control(placeholder='would be cool to be dropdown with users', type='text', name="assignee")
                            |  
                        .form-group
                            .col-lg-10.col-lg-offset-2
                                button.btn.btn-default(type='reset') Cancel
                                |         
                                button.btn.btn-primary(type='submit') Submit