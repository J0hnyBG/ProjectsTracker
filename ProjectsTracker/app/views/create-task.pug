include index

    #banner.container
        .row
            .col-lg-5
                .page-header
                    h1 Create New Task
        .row
            .col-lg-10
                form.form-horizontal(method="post")
                    fieldset
                        legend Task Form
                        |     
                        .form-group
                            label.col-lg-2.control-label(for='project') Project
                            |       
                            .col-lg-10
                                input#inputProjectName.form-control(placeholder='Project', type='text', name="project")
                            |    
                        .form-group
                            label.col-lg-2.control-label(for='title') Title
                            |       
                            .col-lg-10
                                input#inputTaskName.form-control(placeholder='Title', type='text', name="title")
                            |    
                        .form-group
                            label.col-lg-2.control-label(for='description') Description
                            |       
                            .col-lg-10
                                textarea#textArea.form-control(rows='3', name="description")
                                |         
                                span.help-block Describe the task with as much details as possible.
                            |     
                        .form-group
                            label.col-lg-2.control-label(for='priority') Priority
                            |       
                            .col-lg-10
                                select#select.form-control(name="priority")
                                    option 1
                                    |           
                                    option 2
                                    |           
                                    option 3
                                    |           
                                    option 4
                                    |           
                                    option 5
                                    |           
                                    option 6
                                    |           
                                    option 7
                                    |           
                                    option 8
                                    |         
                                    option 9
                                    |           
                                    option 10
                                    |         
                                    br
                            |     
                        .form-group
                            label.col-lg-2.control-label(for='assignee') Assignee
                            |       
                            .col-lg-10
                                input#inputAssigneeName.form-control(placeholder='Assignee', type='text', name="assignee")
                            |    
                        .form-group
                            .col-lg-10.col-lg-offset-2
                                button.btn.btn-default(type='reset') Cancel
                                |         
                                button.btn.btn-primary(type='submit') Submit