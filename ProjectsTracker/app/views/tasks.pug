include index

#banner.container
      .row
        .col-xs-10
          .page-header
            h1 Tasks
      .row
        table.table.responsive.table-hover
          thead
            tr
              th Title
              th Priority
              th Assignee
              th Reporter
              th Status
          tbody
            each task in tasks
              tr
                td #{task.title}
                td #{task.priority}
                td #{task.assignee}
                td #{task.reporter}
                td #{task.status}
              tr