include layout
include index

block content

form.form-horizontal(method="post")
    fieldset
        legend Project Form
        |     
        .form-group
          label.col-lg-2.control-label(for='project-name') Name
          |       
          .col-lg-10
            input#inputProjectName.form-control(placeholder='Name', type='text', name="project-name")
        |    
        |     
        .form-group
          label.col-lg-2.control-label(for='project-description') Description
          |       
          .col-lg-10
            textarea#textArea.form-control(rows='3')
            |         
            span.help-block Tell us something about your project.
        |     
        .form-group
          label.col-lg-2.control-label Project Type
          |       
          .col-lg-10
            .radio
              label
                input#optionsRadios1(name='optionsRadios', value='option1', checked='', type='radio')
                |             Private
            |         
            .radio
              label
                input#optionsRadios2(name='optionsRadios', value='option2', type='radio')
                |             Public
        |     
        .form-group
          label.col-lg-2.control-label(for='select') Select team members
          |       
          .col-lg-10
            select#select.form-control
              option 1
              |           
              option 2
              |           
              option 3
              |           
              option 4
              |           
              option 5
              |           
              option 6
              |           
              option 7
              |           
              option 8
            |         
            br
        |     
        .form-group
          .col-lg-10.col-lg-offset-2
            button.btn.btn-default(type='reset') Cancel
            |         
            button.btn.btn-primary(type='submit') Submit