include index

block main
    #banner.container
        .row
            .col-xs-10
                .page-header
                    h1 All Projects
        .row
            table.table.responsive.table-hover
                thead
                    tr
                        th Title
                        th Description
                        th Access Type
                        th Created Date
                        th Updated Date
                        th Tasks in project
                        th Contributed user
                        th Manage Data
                tbody
                    each project in projects
                        tr
                            td  #{project.title}
                            td  #{project.description}
                            td  #{project.isPrivate}
                            td  #{project.createdAt}
                            td  #{project.updatedAt}
                            td
                                each task in project.tasks
                                    | Title: #{task.title}
                            td  #{project.userContributetTo}
                            td
                                form(action="/settings/projects/project._id" method="put")
                                    input.btn.btn-primary.btn-xs(type='submit' value="Edit")
                                    input(type='hidden', name='_csrf', value=_csrf)
                                form(action="/settings/projects/delete/"+ project._id method="delete")
                                    input.btn.btn-primary.btn-xs(type='submit' value="Delete")
                                    input(type='hidden', name='_csrf', value=_csrf)

include paginate
