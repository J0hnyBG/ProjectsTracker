extends index

block main
    #banner.container
          .row
            .col-xs-10
              .page-header
                h1 All Tasks
          .row
            table.table.responsive.table-hover
              thead
                tr
                  th Title
                  th Priority
                  th Assignee
                  th Reporter
                  th Status
                  th Manage Data
              tbody
                each task in tasks
                  tr
                    td  #{task.title}
                    td  #{task.priority}
                    td  #{task.assignee}
                    td  #{task.reporter}
                    td  #{task.status}
                    td
                        a(href="#") | Edit
                        a(href="#") | Delete
