extends index

block main
    #banner.container
        .col-lg-5
            .page-header
                h1
                    | #{user.fullName}
                a(href='/profile/uploadfile')
                    img.profile-pic(src=user.imagePath)
        .row
            .col-lg-6
                .panel-heading
                    p.panel-title
                        | USERNAME: #{user.username}
                .panel-heading
                    p
                        | FIRST NAME: #{user.firstName}
                    p
                        | LAST NAME: #{user.lastName}
                    p
                        | E-MAIL:
                        a(href="#{user.email}") | #{user.email}
        .row        
          each project in projects             
              .col-lg-6.col-md-7
                .panel.panel-primary
                  - var url = project.id;
                        .panel-heading
                          h3.panel-title
                            a(href="/projects/" + url) #{project.title}
                        .panel-body
                          p #{project.description}
